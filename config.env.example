# Пример конфигурации для Elysia AI Bot
# Скопируйте этот файл в config.env и настройте под себя

# ===========================================
# TELEGRAM BOT CONFIGURATION
# ===========================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ===========================================
# DEEPSEEK API CONFIGURATION
# ===========================================
# Получите API ключ на https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=1.2
DEEPSEEK_MAX_TOKENS=500
API_TIMEOUT=30

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_PATH=./data.sqlite3
DB_TIMEOUT=30
DB_MAX_CONNECTIONS=10

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Максимальная длина сообщения
MAX_MESSAGE_LENGTH=1000

# Rate Limiting настройки
RATE_LIMIT_REQUESTS=20
RATE_LIMIT_WINDOW=60
BLOCK_DURATION=300

# Включить валидацию и rate limiting
ENABLE_VALIDATION=true
ENABLE_RATE_LIMITING=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Включить файловое и консольное логирование
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# Ротация логов
LOG_ROTATION_DAYS=7
MAX_LOG_SIZE_MB=10

# ===========================================
# BOT CONFIGURATION
# ===========================================
# Режим отладки (включить для разработки)
DEBUG_MODE=false

# Режим обслуживания (отключить бота)
MAINTENANCE_MODE=false

# Максимальное количество пользователей
MAX_USERS=10000

# Интервал очистки данных (секунды)
CLEANUP_INTERVAL=300

# ===========================================
# REDIS CONFIGURATION (OPTIONAL)
# ===========================================
# Для кэширования (опционально)
REDIS_URL=redis://localhost:6379/0

# ===========================================
# ADVANCED SETTINGS
# ===========================================
# Настройки для продвинутых пользователей

# Таймауты для различных операций
TELEGRAM_TIMEOUT=30
DATABASE_TIMEOUT=30
API_TIMEOUT=30

# Настройки безопасности
MAX_REQUESTS_PER_MINUTE=60
MAX_MESSAGE_LENGTH=1000
ENABLE_CONTENT_FILTERING=true

# Настройки производительности
ENABLE_CACHING=false
CACHE_TTL=300
MAX_CACHE_SIZE=1000

# Настройки мониторинга
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=60
